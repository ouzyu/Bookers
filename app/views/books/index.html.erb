<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr><% @book_lists.each do |book_list| %>
    <td><%= book_list.title %></td>
    <td><%= book_list.body %></td>
    <td><%= link_to "Show",book_path(book_list.id) %></td>
    <td><%= link_to "Edit",edit_book_path(book_list.id) %></td>
    <td><%= link_to "Delete",book_path(book_list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr><% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="new_book_box">
  <%= form_with model: @book,url: '/books', method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <div class="submit">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
