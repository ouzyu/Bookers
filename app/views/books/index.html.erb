<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr><% @book_lists.each do |book_list| %>
    <td><%= book_list.title %></td>
    <td><%= book_list.body %></td>
    <td><%= link_to "Show",book_path(book_list.id) %></td>
    <td><%= link_to "Edit",edit_book_path(book_list.id) %></td>
    <td><%= link_to "Delete",book_path(book_list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr><% end %>
</table>

<h2>New book</h2>

<div class="error_box"><% if @book.errors.any? %>
  <h4><%= @book.errors.count %> errors prohibited this book from being saved</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book,url: '/books', method: :post do |f| %>
  <%= f.label :title, "Title" %>
  <div class="text">
    <%= f.text_field :title %>
  </div>

  <%= f.label :body, "Body" %>
  <div class="text">
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
<% end %>
