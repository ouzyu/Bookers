<h1>Editing Book</h1>

<div class="error_box">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <%= f.label :title, "Title" %>
  <div class="text">
    <%= f.text_field :title %>
  </div>

  <%= f.label :body, "Body" %>
  <div class="text">
    <%= f.text_area :body %>
  </div>

  <div class="text">
    <%= f.submit ' Update Book ' %>
  </div>
<% end %>

<p class="edit_show">
  <%= link_to "Show",book_path(@book.id) %>
   |
  <a href="/books">Back</a>
</p>